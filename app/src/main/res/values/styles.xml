<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

	<style name="TextViewHeading" parent="Widget.AppCompat.TextView">
		<item name="android:fontFamily">@font/work_sans_bold</item>
		<item name="android:textSize">20sp</item>
		<item name="android:maxLines">1</item>
	</style>

	<style name="TextViewTitle" parent="Widget.AppCompat.TextView">
		<item name="android:fontFamily">@font/work_sans_medium</item>
		<item name="android:textSize">16sp</item>
		<item name="android:maxLines">1</item>
	</style>

	<style name="TextViewSubtitle" parent="Widget.AppCompat.TextView">
		<item name="android:textSize">14sp</item>
		<item name="android:fontFamily">@font/work_sans</item>
		<item name="android:maxLines">1</item>
	</style>

	<style name="TextViewParagraph" parent="Widget.AppCompat.TextView">
		<item name="android:textSize">14sp</item>
		<item name="android:fontFamily">@font/work_sans</item>
	</style>

	<style name="PrimaryBottomButton" parent="Widget.AppCompat.Button">
		<item name="android:textSize">16sp</item>
		<item name="android:fontFamily">@font/work_sans_medium</item>
		<item name="android:textAllCaps">false</item>
	</style>

	<style name="ToolbarStyle" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
		<item name="android:fontFamily">@font/work_sans_medium</item>
	</style>

</resources>
